@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Full-screen video background */
    .video-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: -1; /* Ensures video stays behind all content */
    }

        .video-background video {
            min-width: 100%;
            min-height: 100%;
            object-fit: cover; /* Covers entire screen */
        }

    /* Moving text animation */
    .moving-text {
        display: inline-block;
        animation: moveLeftRight 3s infinite alternate;
        font-weight: bold;
        color: white; /* Adjust color for contrast */
    }

    @@keyframes moveLeftRight {
        0% {
            transform: translateX(0);
        }

        100% {
            transform: translateX(50px);
        }
    }

    /* Center content over video */
    .content-container {
        position: relative;
        z-index: 1; /* Keeps content above video */
        text-align: center;
        color: white; /* Enhances readability */
        padding: 50px;
    }

    /* Image adjustments */
    .logo {
        max-height: 400px;
        border-radius: 8px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
    }
</style>

<!-- Video Background -->
<div class="video-background">
    <video autoplay loop muted>
        <source src="~/WhatsApp Video 2025-04-27 at 1.40.06 AM.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
</div>

<!-- Content -->
<div class="content-container">
    <h1 class="display-4 moving-text">Welcome To INDPRO</h1>

    <p><a href="https://www.indpro.com" target="_blank" style="color: white; text-decoration: underline;">Visit INDPRO Website</a></p>

    <img src="~/OIP.jpg" alt="Indpro Logo" class="img-fluid mt-4 logo" />
</div>
